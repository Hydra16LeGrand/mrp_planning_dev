<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="replace_product_form" model="ir.ui.view">
		<field name="name">replace.product.form</field>
		<field name="model">replace.product</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="product_to_replace_domain" widget="many2many_tags" invisible="1" />

							<field name="product_to_replace" options="{'no_create': 1, 'no_open': 1}" domain="[('id', 'in', product_to_replace_domain)]"/>
							<field name="replacement_product" domain="[('id', '!=', product_to_replace), ('detailed_type_custom', 'in', ['final_product', 'packaging', 'semi_finished_products'])]" attrs="{'readonly': [('product_to_replace', '=', False)]}"/>
							<field name="section_domain" widget="many2many_tags" invisible="1" />
							<field name="section" domain="[('id', 'in', section_domain)]" attrs="{'readonly': [('product_to_replace', '=', False)]}"/>
						</group>
						<group>
							<field name="packaging_line_domain" widget="many2many_tags" invisible="1" />
							<field name="packaging_line" domain="[('id', 'in', packaging_line_domain)]" attrs="{'readonly': [('section', '=', False)]}"/>
<!--								<field name="packaging_line"/>-->
<!--							</field>-->
							<field name="line_domain" widget="many2many_tags" invisible="1" />
<!--							<field name="line" domain="[('id', 'in', line_domain)]" options="{'no_create': 1, 'no_open': 1}" attrs="{'readonly': [('section', '=', False)], 'required': [('section', '!=', False)]}"/>-->
							<field name="line" invisible="1"/>
							<field name="replacement_days_domain" widget="many2many_tags" invisible="1" />
							<field name="replacement_days" widget="many2many_tags" domain="[('id', 'in', replacement_days_domain)]" options="{'no_create': 1, 'no_open': 1}" attrs="{'readonly': [('line', '=', False)]}" />
							<field name="planning_id" readonly="true" />
<!--							<field name="line" domain="[('display_type', '=', 'line_note'), ('planning_id','=',planning_id)]" />-->

						</group>
					</group>
				</sheet>
				<footer>
					<button name="action_replace_product" type="object" string="Confirm" class="btn-primary" confirm="This action is irreversible. Validate ?" />
					<button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
				</footer>
			</form>
		</field>
	</record>

	<!-- <record name="action_replace_product" model="ir.actions.act_window">
		<field name="name"></field>
		<field name="res_model">replace.product</field>
	</record> -->
</odoo>
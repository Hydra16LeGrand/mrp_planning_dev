<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="replace_product_form" model="ir.ui.view">
		<field name="name">replace.product.form</field>
		<field name="model">replace.product</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<field name="default_get_infos" invisible="1"/>
						<group>
							<field name="product_to_replace_domain" widget="many2many_tags" invisible="1" />
							<field name="product_to_replace" options="{'no_create': 1, 'no_open': 1}" domain="[('id', 'in', product_to_replace_domain)]" force_save="1"/>
							<field name="replacement_product" domain="[('id', '!=', product_to_replace), ('detailed_type_custom', 'in', ['final_product', 'packaging', 'semi_finished_products'])]" attrs="{'readonly': [('product_to_replace', '=', False)]}" force_save="1"/>
							<field name="section_domain" widget="many2many_tags" invisible="1" />
							<field name="section" domain="[('id', 'in', section_domain)]" attrs="{'readonly': [('replacement_product', '=', False)]}" force_save="1"/>
						</group>
						<group>
							<field name="packaging_line_domain" widget="many2many_tags" invisible="1" />
							<field name="packaging_line" domain="[('id', 'in', packaging_line_domain)]" attrs="{'readonly': [('section', '=', False)]}" force_save="1"/>
							<field name="qty" attrs="{'readonly': [('section', '=', False)]}" force_save="1"/>
							<field name="line_domain" widget="many2many_tags" invisible="1" />
							<field name="line" invisible="1" force_save="1"/>
							<field name="replacement_days_domain" widget="many2many_tags" invisible="1" />
							<field name="replacement_days" widget="many2many_tags" domain="[('id', 'in', replacement_days_domain)]" options="{'no_create': 1, 'no_open': 1}" attrs="{'readonly': [('packaging_line', '=', False)]}" force_save="1"/>
							<field name="planning_id" readonly="1" force_save="1" invisible="1"/>
						</group>
					</group>
				</sheet>
				<footer>
					<button name="action_replace_product" type="object" string="Confirm" class="btn-primary" confirm="This action is irreversible. Validate ?" />
					<button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
				</footer>
			</form>
		</field>
	</record>

	<record model="ir.actions.act_window" id="action_replace_product">
        <field name="name">Replace Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">replace.product</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="replace_product_form"/>
        <field name="target">new</field>
    </record>
</odoo>
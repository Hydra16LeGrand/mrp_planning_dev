<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="replace_product_form" model="ir.ui.view">
		<field name="name">replace.product.form</field>
		<field name="model">replace.product</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="product_to_replace_domain" widget="many2many_tags" invisible="1" />
							<field name="product_to_replace" options="{'no_create': 1, 'no_open': 1}" domain="[('id', 'in', product_to_replace_domain)]" />
							<field name="replacement_product" domain="[('id', '!=', product_to_replace)]" />
						</group>
						<group>
							<field name="replacement_days_domain" widget="many2many_tags" invisible="1" />
							<field name="replacement_days" widget="many2many_tags" domain="[('id', 'in', replacement_days_domain)]" options="{'no_create': 1, 'no_open': 1}" attrs="{'readonly': [('product_to_replace', '=', False)]}" />
							<field name="planning_id" readonly="true" />
						</group>
					</group>
				</sheet>
				<footer>
					<button name="action_replace_product" type="object" string="Confirm" class="btn-primary" confirm="This action is irreversible. Validate ?" />
					<button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
				</footer>
			</form>
		</field>
	</record>

	<!-- <record name="action_replace_product" model="ir.actions.act_window">
		<field name="name"></field>
		<field name="res_model">replace.product</field>
	</record> -->
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calculating_packs_form" model="ir.ui.view">
        <field name="name">calculating.packs.form</field>
        <field name="model">calculating.packs</field>
        <field name="arch" type="xml">
            <form string="Calculating Packs">
                <field name="calculating_packs_line" widget="section_and_note_one2many" mode="tree">
                    <tree create="false" delete="false" editable="1">
                        <field name="product_id" options="{'no_open': True}" readonly="1"/>
                        <field name="pack_of" readonly="1"/>
                    </tree>
                </field>
            </form>
        </field>
    </record>
    <record id="action_calculating_packs" model="ir.actions.act_window">
        <field name="name">Calculating Packs</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">calculating.packs</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_calculating_packs_form"/>
        <field name="target">new</field>
    </record>
</odoo>

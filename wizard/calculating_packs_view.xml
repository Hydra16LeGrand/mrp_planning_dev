<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_calculating_packs_form" model="ir.ui.view">
        <field name="name">calculating.packs.form</field>
        <field name="model">calculating.pack</field>
        <field name="arch" type="xml">
            <form string="Calculating Packs">
                <field name="cal_packs_line_ids" widget="section_and_note_one2many" mode="tree" force_save="1">
                    <tree create="false" delete="false" editable="1">
                        <field name="product_id" options="{'no_open': True}" readonly="1" force_save="1"/>
                        <field name="pack_of" readonly="1" force_save="1"/>
                    </tree>
                </field>
                <footer invisible="1"/>
            </form>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mrp_planning_form" model="ir.ui.view">
		<field name="name">mrp.planning.form</field>
		<field name="model">mrp.planning</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<button name="action_cancel" type="object" string="Cancel" states="confirm" confirm="This action will cancel all manufacturing orders linked to this planning. Are you sure to do this ?" />
					<button name="action_draft" type="object" string="Re-draft" states="cancel" />
					<button name="action_confirm" type="object" string="Confirm" states="draft" class="oe_highlight" />
					<button name="generate_mo" type="object" string="Generate MO" states="confirm" class="oe_highlight" confirm="Are you sure to do this action ?" />
					<field name="state" widget="statusbar" />
				</header>
				<sheet>
					<field name="mrp_production_ids" invisible="1" />
					<field name="picking_ids" invisible="1"/>
					<div name="button_box" class="oe_button_box">
						<button name="view_mrp_orders" type="object" icon="fa-address-card-o" class="oe_stat_button" attrs="{'invisible': [('mrp_production_ids', '=', [])]}">
							<div class="o_field_widget o_stat_info">
								<span class="o_stat_text">Mrp orders</span>
							</div>
						</button>
						<button name="view_internal_transfer" type="object" attrs="{'invisible': [('picking_ids', '=', [])]}" icon="fa-cubes" class="oe_stat_button" position="before">
			            	<field string="Transfer(s)" name="internal_transfer_count" widget="statinfo"/>
			            </button>
						<button name="view_rm_overview" type="object" attrs="{'invisible': [('state','in',['draft','cancel'])]}" icon="fa-address-card-o" class="oe_stat_button">
							<div class="o_field_widget o_stat_info">
								<span class="o_stat_text">RM Overview</span>
							</div>
						</button>
					</div>
					<div class="oe_title">
						<h1>
							<field name="reference" readonly="1" />
						</h1>
					</div>
					<group>
						<group>
							<field name="team_ids" widget="many2many_tags" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}"/>
							<field name="section_ids" widget="many2many_tags" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}"/>
							<field name="code" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}"/>
						</group>
						<group>
							<field name="scheduled_date" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}"/>
							<field name="week_of" />
						</group>
					</group>
					<notebook>
						<page name="planning_lines" string="Planning lines">
							<field name="planning_line_ids" widget="stock_move_one2many" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}">
								<tree editable="bottom">
									<field name="product_id" />
									<field name="packaging_line_id" options="{'no_create': 1}" domain="[('section_id', 'in', parent.section_ids)]" />
									<field name="package" />
									<field name="uom_domain" invisible="1" />
									<field name="uom_id" domain="[('id', 'in', uom_domain)]" options="{'no_create': 1, 'no_open': 1}" />
									<field name="section_id" invisible="0" />
									<field name="mrp_days" widget="many2many_tags" options="{'no_create': 1}" style="width:40%%"/>
								</tree>
							</field>
						</page>
						<page name="detailed_planning_lines" string="Detailed planning lines">
							<field name="detailed_pl_ids" attrs="{'readonly': [('state', 'in', ['confirm', 'cancel'])]}" context="{'search_default_gp_packaging_line_id': 1}">
								<tree editable="bottom">
									<field name="planning_line_id" invisible="1" />
									<field name="planning_id" invisible="1" />
									<field name="date" />
									<field name="packaging_line_id" />
									<!-- <field name="packaging_line_id" options="{'no_create': 1}" /> -->
									<field name="product_ref" />
									<field name="product_id" />
									<field name="package" />
									<field name="qty" />
									<field name="capacity" />
									<field name="employee_number" />
								</tree>
							</field>
						</page>
					</notebook>
				</sheet>
			</form>
		</field>
	</record>

	<record id="mrp_planning_tree" model="ir.ui.view">
		<field name="name">mrp.planning.tree</field>
		<field name="model">mrp.planning</field>
		<field name="arch" type="xml">
			<tree>
				<field name="reference" />
				<field name="code" />
				<field name="section_ids" widget="many2many_tags" />
				<field name="team_ids" widget="many2many_tags" />
			</tree>
		</field>
	</record>

	<record id="mrp_detail_planning_line_search" model="ir.ui.view">
		<field name="name">mrp.detail.planning.line.search</field>
		<field name="model">mrp.detail.planning.line</field>
		<field name="arch" type="xml">
			<search>
				<field name="packaging_line_id" invisible="1" />
				<group expand="0" string="Group By">
					<filter name="gp_packaging_line_id" string="Packaging lines" domain="[]" context="{'group_by': 'packaging_line_id'}" />
				</group>
			</search>
		</field>
	</record>

	<record id="action_mrp_planning" model="ir.actions.act_window" >
		<field name="name">MRP Planning</field>
		<field name="res_model">mrp.planning</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="mrp_planning_menu" action="action_mrp_planning" parent="mrp.menu_mrp_manufacturing" sequence="1" name="MRP Planning" />
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@id='security_lead_time']" position="after">
                <div class="col-lg-6 col-12 o_setting_box" id="code_setting">
                    <div class="o_setting_right_pane">
                        <label string="Code Planning" for="code"/>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="code" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>

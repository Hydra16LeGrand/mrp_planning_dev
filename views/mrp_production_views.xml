<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="mrp_production_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.production.form.inherit</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
        	<field name="reservation_state" position="before">
        		<div name="button_box" class="oe_button_box">
        			<field name="planning_id" invisible="1" />
        			<button name="action_view_planning" type="object" icon="fa-address-card-o" class="oe_stat_button" attrs="{'invisible': [('planning_id', '=', False)]}">
        				<div class="o_field_widget o_stat_info">
							<span class="o_stat_text">Planning</span>
						</div>
        			</button>
        		</div>
        	</field>
        </field>
    </record>
</odoo>
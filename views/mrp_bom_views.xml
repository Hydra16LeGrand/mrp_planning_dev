<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<record id="mrp_bom_form_view_inherit" model="ir.ui.view">
        <field name="name">mrp.bom.form</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
        	<div class="o_row" position="after">
        		<field name="capacity" />
        		<field name="packing" />
        	</div>
        	<xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="attributes">
        		<attribute name="sum">Total</attribute>
        	</xpath>
	        <xpath expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']" position="after">
	        	<field name="percentage" sum="Total(%)" />
	        </xpath>
        </field>

    </record>
</odoo>